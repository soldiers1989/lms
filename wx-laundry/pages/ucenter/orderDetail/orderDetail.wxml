<view class="container">
    <view class="order-info">
        <view class="item-a">下单时间：{{orderInfo.commitTime}}</view>
        <view class="item-b">订单编号：{{orderInfo.code}}</view>
        <view class="item-c">
            <view class="r">
                <view wx:if="{{orderInfo.handleOption.pay}}">
                    <view class="btn" bindtap="cancelOrder">取消订单</view>
                    <view class="btn active" bindtap="payOrder">去付款</view>
                </view>
                <view wx:elif="{{orderInfo.handleOption.confirm}}">
                    <view class="btn" bindtap="cancelOrder">取消订单</view>
                    <view class="btn active" bindtap="confirmOrder">确认收货</view>
                </view>
                <view wx:else>
                    <view class="btn active" bindtap="cancelOrder">取消订单</view>
                </view>
            </view>
        </view>
    </view>

    <view class="order-goods">
        <view class="h">
            <view class="label">商品信息</view>
        </view>
        <view class="goods">
            <view class="item" wx:for="{{goodsList}}" wx:key="{{item.id}}">
                <view class="img">
                    <image src="{{item.imgUrl}}"></image>
                </view>
                <view class="info">
                    <view class="t">
                        <text class="name">{{item.name}}</text>
                        <text class="number">x{{item.count}}</text>
                    </view>
                    <view class="price">预计价格:￥{{item.estTotalCost}}</view>
                    <view class="price">实际价格:￥{{item.actTotalCost}}</view>
                </view>
            </view>
        </view>
    </view>

    <view class="order-bottom">
        <view class="address">
            <view class="t">
                <text class="name">{{orderShipment.state}}</text>
                <text class="mobile">{{orderShipment.phone}}</text>
            </view>
            <view class="b">{{orderShipment.address}}</view>
        </view>
        <view class="total">
            <view class="t">
                <text class="label">预计：</text>
                <text class="txt">￥{{orderCost.actTotalCost}}</text>
            </view>
            <view class="t">
                <text class="label">实际：</text>
                <text class="txt">￥{{orderCost.actTotalCost}}</text>
            </view>
        </view>
        <view class="pay-fee">
            <text class="label">实付：</text>
            <text class="txt">￥{{orderCost.actPaidCost}}</text>
            <text class="txt">折扣{{orderCost.discount}}</text>
        </view>
    </view>
</view>